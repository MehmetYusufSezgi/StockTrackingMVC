@model IEnumerable<Log>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-light">Kayıt Listesi</h2>
        </div>
    </div>
</div>
<br />
<div class="d-flex justify-content-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="/Log/Index?page=@(ViewBag.CurrentPage - 1)&pageSize=@ViewBag.PageSize">Önceki</a>
                </li>
            }

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="/Log/Index?page=@i&pageSize=@ViewBag.PageSize">@i</a>
                </li>
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="/Log/Index?page=@(ViewBag.CurrentPage + 1)&pageSize=@ViewBag.PageSize">Sonraki</a>
                </li>
            }
        </ul>
    </nav>
</div>
<div class="container">
    <form method="get" action="@Url.Action("Index", "Log")">
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="searchQuery" placeholder="Kullanıcı Kaydı Ara">
            <button class="btn btn-outline-secondary" type="submit">Ara</button>
        </div>
    </form>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Kullanıcı Adı
            </th>
            <th>
                Kayıt Tarihi
            </th>
            <th>
                Kayıt Mesajı
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in ViewBag.Logs)
        {
            <tr>
                <td width="10%">
                    @obj.LogUser
                </td>
                <td width="10%">
                    @obj.LogTime
                </td>
                <td width="70%">
                    @obj.LogMessage
                </td>
            </tr>
        }

    </tbody>
</table>
