@{
    Layout = "_Layout";
}

@using System.Security.Claims;
@{
    // Get the User's UserType claim from the current HttpContext.
    var userTypeClaim = Context.User.FindFirstValue(ClaimTypes.Role);

    if (userTypeClaim == "kullanici")
    {
        Layout = "_LayoutKullanici";
    }
    else if (userTypeClaim == "admin")
    {
        Layout = "_LayoutAdmin";
    }
    else
    {
        Layout = "_Layout"; // Use the default layout if UserType is not "kullanici" or "admin".
    }
}